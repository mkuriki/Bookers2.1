<body>
    <h2>Books</h2>
    <table>
        <tr>
            <th colspan="1"></th>
            <th>title</th>
            <th>opinion</th>
        </tr>
        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td><%= image_tag book.get_image %></td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    
</body>