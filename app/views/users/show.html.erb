
            <div class= container px-5 px-sm-0>
                <div class = row>
                    <%= render 'books/info', book: @new_book, user: @user %>
                    <div  class="col-md-8 offset-md-1"> 
                        <h2>Books</h2>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>title</th>
                                    <th>opinion</th>
                                    <th colspan="3"></th>
                                </tr>
                                <tbody>
                                    <% @books.each do |book| %>
                                        <tr>
                                            <td><%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(@user) %></td>
                                            <td><%= link_to book.title, book_path(book.id) %></td>
                                            <td><%= book.body %></td>
                                            <td>コメント数：<%= book.book_comments.count%></td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
